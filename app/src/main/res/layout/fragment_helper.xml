<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Fragments.HelperFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/instructions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="How to Use the Credit Card Fraud Detection Predictor"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/instructions_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:text="1. Enter your credit card number in the designated field.\n\n2. Enter the transaction amount.\n\n3. Press the 'Predict' button to check if the transaction is likely to be fraudulent.\n\nPlease ensure that you enter valid information to get accurate results."
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:textAlignment="center"/>

    </LinearLayout>

</FrameLayout>
